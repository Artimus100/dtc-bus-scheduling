generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Route {
  id          String   @id @default(uuid())
  name        String
  coordinates String   // Assuming you're storing GeoJSON as a string
  buses       Bus[]
}

model Bus {
  id          String      @id @default(uuid())
  number      String
  routeId     String?
  route       Route?      @relation(fields: [routeId], references: [id])

  crews       Crew[]
  assignments Assignment[]
}

model Crew {
  id          String      @id @default(uuid())
  name        String
  busId       String?
  bus         Bus?        @relation(fields: [busId], references: [id])

  assignments Assignment[]
}

model Assignment {
  id          String   @id @default(uuid())
  crewId      String
  busId       String
  startTime   DateTime
  endTime     DateTime
  crew        Crew      @relation(fields: [crewId], references: [id])
  bus         Bus       @relation(fields: [busId], references: [id])
}
